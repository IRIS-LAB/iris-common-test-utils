{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "./src",
    "outDir": "./build",
    "types": [
      "@types/node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
