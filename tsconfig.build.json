{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": false,
    "declaration": true,
    "lib": ["es2015", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "types": ["@types/node", "jest", "jest-expect-message"],
    "typeRoots": ["node_modules/@types", "jest.extend"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "jest.extend.d.ts"],
  "exclude": ["node_modules", "dist"]
}
